{
  "version": 2,
	"builds": [
		{ "src": "_site/**/*.html", "use": "@now/html-minifier" },
    { "src": "_site/static/**/*", "use": "@now/static"}
  ],
  "routes": [
    { "src": "^/static/(.*)", "dest": "_site/static/$1"},
    { "src": "^/(.*)", "dest": "_site/$1" }
  ],
  "github": {
   "enabled": false
  }
}
